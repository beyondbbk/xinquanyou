<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/excel/css/layout.css" rel="stylesheet" />
    <!-- HTML5 shim 和 Respond.js 是为了让 IE8 支持 HTML5 元素和媒体查询（media queries）功能 -->
    <!-- 警告：通过 file:// 协议（就是直接将 html 页面拖拽到浏览器中）访问页面时 Respond.js 不起作用 -->
    <!--[if lt IE 9]>
        <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("css", false)
</head>

<body role="document">
@*页面头部*@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h3>
                Test <small>这是一个测试系统</small>
            </h3>
        </div>
        <div class="col-md-6 text-right">
            <div id="nav-right-btn">
                <a class="btn btn-primary btn-sm" href="https://github.com/beyondbbk/xinquanyou" target="_blank" role="button">GitHub</a>
           
                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#admiremodal">测试</button>
            </div>

        </div>
    </div>
    <hr/>
</div>
@*主体内容*@
<div class="container-fluid" id="maindiv">
    @RenderSection("body", true)
</div>
@*页面底部*@
<div class="container-fluid">
    <div class="row footer">
        <div class="col-md-12">
            <hr />
            <h5 class="text-center">推荐谷歌浏览器</h5>
        </div>
    </div>
</div>
    
    
    
@*捐助对话框*@
<div class="modal fade" id="admiremodal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">测试</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="vcenter" style="width: 44%">
                        <h6>微信</h6>
                        <img src="/excel/img/weixin.png" class="img-rounded">
                    </div>
                    <div class="vcenter" style="width: 10%">
                       
                    </div>
                    <div class="vcenter" style="width: 44%">
                        <h6>支付宝</h6>
                        <img src="/excel/img/zhifubao.png" class="img-rounded">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 vcenter">
                        <h6>有能力的话就支持一波吧</h6>
                    </div>
                    
                </div>
             
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
             
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
    
<!--全局提示栏-->
<div>
    <button id="globaltitle" class="btn btn-sm btn-success">警告，网络故障。</button>
    <input id="globaltitletimeid" type="hidden" />
</div><!--全局提示栏end-->

<!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
<script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
<!-- 加载 Bootstrap 的所有 JavaScript 插件。你也可以根据需要只加载单个插件。 -->
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="~/excel/js/layout.js"></script>

@RenderSection("script", false)
</body>

</html>