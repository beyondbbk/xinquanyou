@model MySoft.ResManger.Models.ExcelInfo

@{
    ViewData["Title"] = "Test";

}
@section css
    {
    <link href="~/excel/css/home.css" rel="stylesheet" />

}

@section body
    {
    <div class="row" id="btnmemu">

        <div class="col-md-6">
            @*<div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        ODU
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>

                        <li><a href="#">Separated link</a></li>
                    </ul>
                </div>*@

        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-primary btn-sm" href="#" target="_blank" role="button">表格上传</a>
            <a class="btn btn-primary btn-sm" href="#" target="_blank" role="button">表格下载</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2" style="width: 12%">
            <ul class="list-group">
                @foreach (var sheetInfo in Model.SheetInfos)
                {
                    <li class="list-group-item sheetli" onclick="GetView('yh','@sheetInfo.SheetName','1')">
                        <span class="badge">@sheetInfo.RowCount</span>
                        @sheetInfo.SheetName
                    </li>

                }

            </ul>
        </div>
        <div class="col-md-10" style="width: 88%">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h6 class="text-center"></h6>
                </div>

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        @foreach (var head in Model.Headers)
                        {
                            <th>@head</th>
                        }

                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var dic in Model.RowInfos)
                    {
                        int col = 1;
                        <tr>
                            @foreach (var cell in dic.Value)
                            {
                                <td class="sheetli" onmousemove="ShowTitle()" onclick="EditData('@cell','@dic.Key','@col')">@cell</td>
                            }
                        </tr>
                        col++;
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
        
        
    @*模态对话框*@
    <div class="modal fade" id="editmodal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">修改数据</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="prevalue">旧数据</label>
                            <text type="text" class="form-control" id="prevalue"></text>
                        </div>
                        <div class="form-group">
                            <label for="newvalue">新数据</label>
                            <input type="password" class="form-control" id="newvalue" placeholder="请输入你要修改的值...">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary">确定</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@section script
    {

    <script src="~/excel/js/home/analyexcelfile.js"></script>
}
