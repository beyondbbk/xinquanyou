@model MySoft.ResManger.Models.ExcelViewInfo

@{
    ViewData["Title"] = "Test";

}
@section css
    {
    <link href="~/excel/css/home.css" rel="stylesheet" />

}

@section body
    {
    <div class="row" id="btnmemu">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="input-group">
                <input id="searchinput" type="text" class="form-control" placeholder="关键字请用空格隔开..." value="@Model.SearchWords">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" onclick="GetView('yh','@Model.CurrentSheetName','1')">搜索一下</button>
                </span>
            </div><!-- /input-group -->

        </div>
        <div class="col-md-4 text-right">
            <a class="btn btn-primary btn-sm" href="/excel/home/index" target="_blank" role="button">重新上传</a>
            <a class="btn btn-primary btn-sm" href="/excel/yh.xlsx" target="_blank" role="button">下载表格</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2" style="width: 12%">
            <ul class="list-group">
                @foreach (var sheetInfo in Model.SheetInfos)
                {
                    <li class="list-group-item sheetli @(Model.CurrentSheetName==sheetInfo.SheetName?"active":"")" onclick="GetView('@sheetInfo.SheetName')">
                        <span class="badge">@sheetInfo.RowCount</span>
                        @sheetInfo.SheetName
                    </li>

                }

            </ul>
        </div>
        <div class="col-md-10" style="width: 88%">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-sm @(Model.IsFirstPage?"disabled":"")" onclick="GetView('', '@(Model.PageNum - 1)')">上一页</button>
                        </div>
                        <div class="col-md-4 text-center">
                            <button type="button" class="btn btn-primary btn-sm">当前第 @(Model.PageNum) 页</button>
                        </div>
                        <div class="col-md-4 text-right">
                            <button type="button" class="btn btn-primary btn-sm @(Model.IsEndPage?"disabled":"")" onclick="GetView('', '@(Model.PageNum + 1)')">下一页</button>
                        </div>
                    </div>
                    
                    
                   
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            @foreach (var head in Model.Headers)
                            {
                                <th>@head</th>
                            }

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dic in Model.RowInfos)
                        {
                            int col = 1;
                            <tr>

                                @foreach (var cell in dic.Value)
                                {

                                    <td class="sheetli" onmousemove="ShowTitle()" onclick="EditData(this, '@dic.Key', '@col')">@Html.Raw(@cell)</td>
                                    col++;
                                }
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    @*模态对话框*@
    <div class="modal fade" id="editmodal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">修改数据</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="prevalue">旧数据</label>
                            <text type="text" class="form-control" id="prevalue"></text>
                        </div>
                        <div class="form-group">
                            <label for="newvalue">新数据</label>
                            <input type="text" class="form-control" id="newvalue" placeholder="请输入你要修改的值...">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" onclick="BtnYes()">确定</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <input type="hidden" id="sheetname" value="@Model.CurrentSheetName" />
    <input type="hidden" id="pagenum" value="@Model.PageNum" />

}

@section script
    {

    <script src="~/excel/js/home/analyexcelfile.js"></script>
}
